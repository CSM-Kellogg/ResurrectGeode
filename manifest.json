{
    "manifest_version": 3,
    "name": "Geode Resurrected",
    "version": "1.0",
    "description": "Your schedule making savior",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "permissions": ["storage", "activeTab", "scripting", "tabs"],
    "host_permissions": ["<all_urls>", "file://*"],
    "web_accessible_resources": [
        {
            "resources": [""],
            "matches": ["<all_urls>"]
        }
    ]
}
